<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名*:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/set_userName"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/white"
                app:strokeColorT="@color/color_1890FF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号*:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/set_id_card"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:gravity="center_vertical"
                android:hint="请输入身份证号"
                android:maxLength="18"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/white"
                app:strokeColorT="@color/color_1890FF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名*:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/set_parent_name"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:gravity="center_vertical"
                android:hint="请输入家长姓名"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/white"
                app:strokeColorT="@color/color_1890FF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_parent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长手机号*:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeEditText
                android:id="@+id/set_parent_phone"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:gravity="center_vertical"
                android:hint="请输入家长手机号"
                android:maxLength="11"
                android:imeOptions="actionDone"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/white"
                app:strokeColorT="@color/color_1890FF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐卡账号:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_account"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:hint="餐卡账号"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/color_E0E7F1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_card_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_card_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐卡状态:"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_card_state"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:hint="餐卡状态"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textColor="@color/color_666666"
                android:textColorHint="@color/color_dcdcdc"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/color_E0E7F1" />
        </LinearLayout>

    </LinearLayout>

    <com.stkj.common.ui.widget.shapelayout.ShapeFrameLayout
        android:id="@+id/sll_camera_upload"
        android:layout_width="@dimen/dp_137"
        android:layout_height="@dimen/dp_137"
        android:layout_marginLeft="@dimen/dp_23"
        android:orientation="vertical"
        app:radiusT="@dimen/dp_4"
        app:solidColorT="@color/white">

        <LinearLayout
            android:id="@+id/ll_add_camera_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_camera_upload" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="点击添加人脸"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.stkj.common.ui.widget.shapelayout.ShapeFrameLayout>

</LinearLayout>