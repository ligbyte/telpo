<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@drawable/shape_main_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <com.stkj.infocollect.card.ui.widget.CardAccountInfoLayout
            android:id="@+id/account_info_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:cail_can_edit="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">

            <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                android:id="@+id/stv_cancel"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_23"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_11"
                app:radiusT="@dimen/dp_4"
                app:solidColorT="@color/white"
                app:strokeColorT="@color/color_D7D7D7"
                app:strokeWidthT="@dimen/dp_0_5" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_loss_card"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="仅挂失"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                app:normalRadiusT="@dimen/dp_4"
                app:normalSolidColorT="@color/color_1890FF"
                app:selectRadiusT="@dimen/dp_4"
                app:selectSolidColorT="@color/color_B8C4D1"
                app:shapeNormalColor="@color/white"
                app:shapeSelectColor="@color/white" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_loss_replace_card"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="挂失并申请补卡"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                app:normalRadiusT="@dimen/dp_4"
                app:normalSolidColorT="@color/color_1890FF"
                app:selectRadiusT="@dimen/dp_4"
                app:selectSolidColorT="@color/color_B8C4D1"
                app:shapeNormalColor="@color/white"
                app:shapeSelectColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>