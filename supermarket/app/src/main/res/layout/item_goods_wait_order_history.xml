<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_55"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/dp_7"
    android:orientation="vertical">

    <com.stkj.common.ui.widget.shapelayout.ShapeTextView
        android:id="@+id/tv_order_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="挂单时间"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_7"
        app:solidColorT="@color/color_C3E2FF"
        app:topLeftRadiusT="@dimen/dp_4"
        app:topRightRadiusT="@dimen/dp_4" />

    <com.stkj.common.ui.widget.shapelayout.ShapeTextView
        android:id="@+id/tv_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLines="3"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dp_2"
        android:padding="@dimen/dp_5"
        android:text="历史挂单"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_7"
        app:bottomLeftRadiusT="@dimen/dp_4"
        app:bottomRightRadiusT="@dimen/dp_4"
        app:solidColorT="@color/color_D3EAFF" />
</LinearLayout>
