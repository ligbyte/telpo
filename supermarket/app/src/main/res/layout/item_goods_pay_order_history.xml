<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/selector_item_sale_list"
    android:clickable="true"
    android:orientation="horizontal"
    app:line_bottom="true"
    app:line_color="@color/color_E8EAED"
    app:line_width="@dimen/dp_0_5">

    <FrameLayout
        android:layout_width="@dimen/dp_45"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_goods_pic2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_goods_default"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_goods_pic1"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:src="@mipmap/icon_goods_default" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_goods_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="商品名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="订单编号:"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_order_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="支付时间:"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="@color/color_FF3C30"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:minWidth="@dimen/dp_48"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            app:radiusT="@dimen/dp_8"
            app:solidColorT="@color/color_e3e9f5">

            <ImageView
                android:id="@+id/iv_pay_type"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="已支付"
                android:textColor="@color/color_0087FA"
                android:textSize="@dimen/sp_8"
                android:textStyle="bold" />

        </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>

    </LinearLayout>


</com.stkj.common.ui.widget.linelayout.LineLinearLayout>