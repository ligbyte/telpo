<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/selector_item_sale_list"
    android:padding="@dimen/dp_5"
    app:line_color="@color/color_EDF0F5"
    app:line_bottom="true"
    app:line_width="@dimen/dp_1">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_goods_default" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_60"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="商品名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_goods_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="商品条码"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_11" />
    </FrameLayout>
</com.stkj.common.ui.widget.linelayout.LineFrameLayout>