<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.stkj.supermarketmini.goods.ui.weight.GoodsDetailInfoLayout
        android:id="@+id/goods_detail_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_9" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_9">

        <!-- 商品信息标题 -->
        <com.stkj.common.ui.widget.shapelayout.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_11"
            android:text="库存记录"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:radiusT="@dimen/dp_4"
            app:solidColorT="@color/color_D3EAFF" />

        <TextView
            android:id="@+id/tv_goods_batch_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_11"
            android:text="平均进货价：¥0.00 丨当前库存：0\n总销量：0丨 总销售额：¥0.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
