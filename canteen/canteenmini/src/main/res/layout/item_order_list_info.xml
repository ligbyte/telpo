<?xml version="1.0" encoding="utf-8"?>
<com.stkj.common.ui.widget.linelayout.LineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@drawable/selector_item_sale_list"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:line_bottom="true"
    app:line_color="@color/color_EDF0F5"
    app:line_width="@dimen/dp_1">

    <!-- 用户名、手机号 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="手机号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 支付状态 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- 支付状态 -->
        <TextView
            android:id="@+id/tv_pay_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="支付状态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <!-- 支付时间 -->
        <TextView
            android:id="@+id/tv_pay_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="支付时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- 金额 -->
        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="¥ 0.00"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <!-- 退款按钮 -->
        <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
            android:id="@+id/stv_refund"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:text="退款"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:normalRadiusT="@dimen/dp_15"
            app:normalSolidColorT="@color/color_e3e9f5"
            app:selectRadiusT="@dimen/dp_15"
            app:selectSolidColorT="@color/color_0087FA"
            app:shapeNormalColor="@color/color_666666"
            app:shapeSelect="true"
            app:shapeSelectColor="@color/white" />

    </LinearLayout>

    <!-- 支付方式 -->
    <!--    <TextView-->
    <!--        android:id="@+id/tv_pay_type"-->
    <!--        android:layout_width="@dimen/dp_80"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:singleLine="true"-->
    <!--        android:text="支付方式"-->
    <!--        android:textColor="@color/color_333333"-->
    <!--        android:textSize="@dimen/sp_12"-->
    <!--        android:textStyle="bold" />-->

</com.stkj.common.ui.widget.linelayout.LineLinearLayout>