<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingTop="@dimen/dp_11"
        android:paddingRight="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_11"
        app:radiusT="@dimen/dp_5"
        app:solidColorT="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机号查看"
            android:textColor="@color/color_171717"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />

        <!-- 设备号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:text="设备号:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <!-- 设备名称 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:text="设备名称:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <!-- 账号信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:text="账号信息:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:src="@mipmap/icon_face_default" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_11"
                android:singleLine="true"
                android:text="账户名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_8" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_change_user"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="点击切换账号"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:normalRadiusT="@dimen/dp_10"
                app:normalSolidColorT="@color/color_e3e9f5"
                app:selectRadiusT="@dimen/dp_10"
                app:selectSolidColorT="@color/color_0087FA"
                app:shapeNormalColor="@color/color_666666"
                app:shapeSelect="true"
                app:shapeSelectColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_EDF0F5" />

        <!-- 在线升级 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="在线升级"
            android:textColor="@color/color_171717"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />

        <!-- 当前版本 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:text="当前版本:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:singleLine="true"
                android:text="慧餐宝v1.0.0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_8" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_check_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="点击检查更新"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:normalRadiusT="@dimen/dp_10"
                app:normalSolidColorT="@color/color_e3e9f5"
                app:selectRadiusT="@dimen/dp_10"
                app:selectSolidColorT="@color/color_0087FA"
                app:shapeNormalColor="@color/color_666666"
                app:shapeSelect="true"
                app:shapeSelectColor="@color/white" />

            <ProgressBar
                android:id="@+id/pb_check_version_loading"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_11"
                android:indeterminateTint="@color/color_0085CF"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_check_version_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="正在更新"
                android:textColor="@color/color_171717"
                android:textSize="@dimen/dp_7"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_EDF0F5" />

        <!-- 待机设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="待机设置"
            android:textColor="@color/color_171717"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />

        <!-- 屏幕保护 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不活跃时启动屏幕保护:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <FrameLayout
                android:id="@+id/fl_screen_protect"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11">

                <com.stkj.common.ui.widget.shapelayout.ShapeTextView
                    android:id="@+id/stv_screen_protect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/sp_8"
                    app:radiusT="@dimen/dp_4"
                    app:strokeColorT="@color/color_E8EAED"
                    app:strokeWidthT="@dimen/dp_0_5" />

                <ImageView
                    android:id="@+id/iv_screen_protect"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_19"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/dp_5_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5_5"
                    android:src="@drawable/selector_expand_arrow" />
            </FrameLayout>

        </LinearLayout>

        <!-- 待机设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="日志设置"
            android:textColor="@color/color_171717"
            android:textSize="@dimen/sp_8"
            android:textStyle="bold" />

        <!-- 日志信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:text="崩溃日志:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_export_crash_log"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="导出崩溃日志"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:normalRadiusT="@dimen/dp_10"
                app:normalSolidColorT="@color/color_e3e9f5"
                app:selectRadiusT="@dimen/dp_10"
                app:selectSolidColorT="@color/color_0087FA"
                app:shapeNormalColor="@color/color_666666"
                app:shapeSelect="true"
                app:shapeSelectColor="@color/white" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_clear_crash_log"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="清理崩溃日志"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:normalRadiusT="@dimen/dp_10"
                app:normalSolidColorT="@color/color_e3e9f5"
                app:selectRadiusT="@dimen/dp_10"
                app:selectSolidColorT="@color/color_0087FA"
                app:shapeNormalColor="@color/color_666666"
                app:shapeSelect="true"
                app:shapeSelectColor="@color/white" />
        </LinearLayout>

        <!-- 系统日志开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统日志开关: "
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_8" />

            <ImageView
                android:id="@+id/iv_switch_sys_log"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/selector_switch" />

            <com.stkj.common.ui.widget.shapeselectlayout.ShapeSelectTextView
                android:id="@+id/stv_upload_sys_log"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="点击上传日志"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_8"
                app:normalRadiusT="@dimen/dp_10"
                app:normalSolidColorT="@color/color_e3e9f5"
                app:selectRadiusT="@dimen/dp_10"
                app:selectSolidColorT="@color/color_0087FA"
                app:shapeNormalColor="@color/color_666666"
                app:shapeSelect="true"
                app:shapeSelectColor="@color/white" />

            <ProgressBar
                android:id="@+id/pb_upload_sys_log_loading"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_11"
                android:indeterminateTint="@color/color_0085CF"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone" />
        </LinearLayout>

    </com.stkj.common.ui.widget.shapelayout.ShapeLinearLayout>
</ScrollView>
