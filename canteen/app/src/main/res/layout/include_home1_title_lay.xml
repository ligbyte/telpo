<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_11"
    android:paddingRight="@dimen/dp_11">

    <ImageView
        android:id="@+id/iv_canteen_logo"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/icon_canteen_green" />

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:maxLines="1"
        android:text="慧餐宝"
        android:textColor="@color/color_B5FADE"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_store_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:visibility="gone"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <com.stkj.common.ui.widget.shapelayout.ShapeTextView
        android:id="@+id/stv_consumer_mode"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_5"
        android:gravity="center"
        android:maxLines="1"
        android:text="金额模式"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        app:radiusT="@dimen/dp_15"
        app:strokeColorT="@color/color_00E078"
        app:strokeWidthT="@dimen/dp_2" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_sys_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:maxLines="1"
        android:text="12-1 15:03"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_net_delay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:maxLines="1"
        android:text="网络信号"
        android:textColor="@color/color_00DC82"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_sys_wifi"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@mipmap/ic_wifi_no" />

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/icon_battery_100" />
</LinearLayout>